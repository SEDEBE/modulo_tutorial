<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Vista en lista-->
    <record id="view_skin_tree" model="ir.ui.view">
        <field name="name">cs.skin.tree</field>
        <field name="model">cs.skin</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image"/>
                <field name="name"/>
                <field name="price" widget="image"/>
            </tree>
        </field>
    </record>
    <!--Vista en Formulario-->
    <record id="view_skin_form" model="ir.ui.view">
        <field name="name">cs.skin.form</field>
        <field name="model">cs.skin</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="name"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>